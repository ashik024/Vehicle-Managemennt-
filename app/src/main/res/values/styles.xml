<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mbwColor</item>
        <item name="colorPrimaryDark">@color/mbwColor</item>
        <item name="colorAccent">@color/mbwColor</item>
        <item name="android:textViewStyle">@style/CustomTextViewStyle</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/CustomTextViewStyle</item>

    </style>

    <!-- Custom TextView Style -->
    <style name="CustomTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <color name="black">#2C2C2C</color>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/mbwColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/gray600</item>
        <item name="colorControlNormal">@color/yellow</item>
        <item name="colorControlActivated">@color/black</item>
    </style>
    <style name="error_appearance"
        parent="@android:style/TextAppearance">
        <item name="android:textColor">#BB1515</item>
        <item name="android:textSize">12sp</item>

    </style>
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/mbwColor</item>
        <item name="android:textColorPrimary">@color/gray600</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>

        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@color/mbwColor</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>



    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>


</resources>
