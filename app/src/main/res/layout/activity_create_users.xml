<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView

        android:id="@+id/createUserScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:focusable="true"
            android:focusableInTouchMode="true"
            tools:context="com.example.createUserCar.CreateUsers">
            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_alignParentTop="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"
                    android:paddingBottom="56dp">


                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/colouractionbar"
                        android:orientation="horizontal"
                        android:padding="@dimen/layout_margin"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/back"
                            android:layout_width="24dp"
                            android:layout_height="@dimen/_26sdp"
                            android:src="@drawable/ic_arrow_back_white"
                            android:tint="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/HeaderCustomer"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical"
                            android:text="Create Customers And Cars"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/ivDatePicker"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/ivDatePicker"
                            app:layout_constraintTop_toTopOf="@+id/ivDatePicker" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/customer_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="Enter Customer Type- " />


                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/customerSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:background="@drawable/spinner_border_forecast"

                        />

                    <EditText
                        android:id="@+id/mbwCustomerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:hint="Customer Name"
                        android:backgroundTint="@color/gray600"
                        android:textColor="@color/gray600"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        />
                    <EditText
                        android:id="@+id/mbwCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:hint="Company Name"
                        android:backgroundTint="@color/gray600"
                        android:textColor="@color/gray600"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        />
                    <EditText
                        android:id="@+id/mbwCustomerContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"

                        android:textSize="@dimen/_10sdp"
                        android:hint="Contact No"
                        android:backgroundTint="@color/gray600"
                        android:textColor="@color/gray600"
                        android:imeOptions="actionNext"
                        android:inputType="phone"/>
                    <EditText
                        android:id="@+id/mbwCustomerEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"

                        android:textSize="@dimen/_10sdp"
                        android:hint="Customer Email"
                        android:backgroundTint="@color/gray600"
                        android:textColor="@color/gray600"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        />
                    <EditText
                        android:id="@+id/mbwCustomerIntroduced"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:textSize="@dimen/_10sdp"
                        android:hint="Introduced By"
                        android:backgroundTint="@color/gray600"
                        android:textColor="@color/gray600" />

                    <EditText
                        android:id="@+id/mbwCustomerAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:textSize="@dimen/_10sdp"
                        android:hint="Address"
                        android:backgroundTint="@color/gray600"
                        android:textColor="@color/gray600" />
                    <EditText
                        android:id="@+id/mbwTransportOfficer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"

                        android:textSize="@dimen/_10sdp"
                        android:hint="Transport Officer Name"
                        android:backgroundTint="@color/gray600"
                        android:textColor="@color/gray600"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        />
                    <EditText
                        android:id="@+id/mbwTransportOfficerNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_8sdp"

                        android:textSize="@dimen/_10sdp"
                        android:hint="Transport Officer Number"
                        android:backgroundTint="@color/gray600"
                        android:textColor="@color/gray600"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        />


                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/colouractionbar"
                        android:orientation="horizontal"
                        android:padding="@dimen/layout_margin"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">



                        <TextView
                            android:id="@+id/HeaderCustomer2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical"
                            android:text="Cars Details"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/ivDatePicker"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/ivDatePicker"
                            app:layout_constraintTop_toTopOf="@+id/ivDatePicker" />




                    </LinearLayout>



                    <EditText
                        android:id="@+id/mbwRegNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:backgroundTint="@color/gray600"
                        android:hint="Reg No"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:textColor="@color/gray600"
                        android:textSize="@dimen/_10sdp"
                        />

                    <TextView
                        android:id="@+id/Engine_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="Brand Type- " />


                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/engineSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:background="@drawable/spinner_border_forecast"


                        />

                    <TextView
                        android:id="@+id/vehicle_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="Model- " />


                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/vehiclemodelSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:background="@drawable/spinner_border_forecast"


                        />

                    <EditText
                        android:id="@+id/mbwChassisNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:hint="Chassis No"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:backgroundTint="@color/gray600"
                        android:textColor="@color/gray600" />

                    <TextView
                        android:id="@+id/engine_model_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="Engine Type- " />


                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/engineModelSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:background="@drawable/spinner_border_forecast"


                        />

                    <EditText
                        android:id="@+id/mbwEngineNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:hint="Engine No"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:backgroundTint="@color/gray600"
                        android:textColor="@color/gray600"

                        />
                    <EditText
                        android:id="@+id/mbwYearModel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:hint="Year Model"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:backgroundTint="@color/gray600"
                        android:textColor="@color/gray600"

                        />
                    <EditText
                        android:id="@+id/mbwCC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:hint="CC"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:backgroundTint="@color/gray600"
                        android:textColor="@color/gray600"

                        />







                    <TextView
                        android:id="@+id/transmissionType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="Enter Transmission Type- " />


                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/transmissionTypeSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:background="@drawable/spinner_border_forecast"

                        />

                    <TextView
                        android:id="@+id/wheelType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="Enter Wheel Type- " />


                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/wheelTypeSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:background="@drawable/spinner_border_forecast"

                        />

                    <TextView
                        android:id="@+id/fuel_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="Enter Fuel Type- " />


                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/fuelSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:background="@drawable/spinner_border_forecast"

                        />

                    <EditText
                        android:id="@+id/mbwDriverName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:hint="Driver Name"
                        android:backgroundTint="@color/gray600"
                        android:textColor="@color/gray600"
                        android:imeOptions="actionNext"
                        android:inputType="text"/>

                    <EditText
                        android:id="@+id/mbwDriverNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:hint="Driver No"
                        android:backgroundTint="@color/gray600"
                        android:textColor="@color/gray600"
                        android:imeOptions="actionNext"
                        android:inputType="phone"/>


                    <Button
                        android:id="@+id/save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:text="Save"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:textColor="@color/white"
                        android:background="@drawable/background_login_ripple"/>
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/createCuCar_spin_kit"
                style="@style/SpinKitView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible"
                app:SpinKit_Color="@color/mbwColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
